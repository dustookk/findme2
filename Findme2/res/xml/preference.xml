        android:summary="@string/tracking_history"
        android:title="@string/history" />
    <Preference
        android:summary="@string/people_who_can_track_you"
        android:title="@string/trusts" />

    <ListPreference
        android:entries="@array/the_way_to_show_result"
        android:entryValues="@array/the_way_to_show_result_value"
        android:key="the_way_to_show_result"
